	@AfterTest
	public void teardown() {
		if (driver != null) {
			try {
				Thread.sleep(6000);
			} catch (InterruptedException e) {
				e.printStackTrace();
			}
			// Đóng trình duyệt
			driver.quit();
		}
	}
}
